{
  "name": "Git",
  "description": "Plugin to handle versioning in git",
  "author": "Mathieu Dutour",
  "authorEmail" : "mathieu@dutour.me",
  "homepage": "http://github.com/mathieudutour/git-sketch-plugin",
  "version": "0.6.0",
  "identifier": "me.dutour.mathieu.git-plugin",
  "compatibleVersion": 3,
  "bundleVersion": 2,
  "commands": [
    {
      "name": "update",
      "identifier": "update",
      "script": "update.cocoascript",
      "handlers" : {
        "actions": {
          "OpenDocument": "onOpenDocument"
        }
      },
    },
    {
      "name": "Commit",
      "identifier": "commit",
      "shortcut": "cmd alt ctrl c",
      "script": "Commit.cocoascript",
    },
    {
      "name": "Push",
      "identifier": "push",
      "shortcut": "cmd alt ctrl p",
      "script": "Push.cocoascript",
    },
    {
      "name": "New Branch",
      "identifier": "branch",
      "shortcut": "cmd alt ctrl n",
      "script": "Branch.cocoascript",
    },
    {
      "name": "Switch branch",
      "identifier": "checkout",
      "shortcut": "cmd alt ctrl o",
      "script": "Checkout.cocoascript",
    },
    {
      "name": "Pull",
      "identifier": "pull",
      "script": "Pull.cocoascript",
    },
    {
      "name": "Generate files for pretty diffs",
      "identifier": "export",
      "script": "Export.cocoascript",
    },
    {
      "name": "Add file to git",
      "identifier": "add",
      "script": "Add.cocoascript",
    },
    {
      "name": "Init git repo",
      "identifier": "init",
      "script": "Init.cocoascript",
    },
    {
      "name": "Preferences",
      "identifier": "preferences",
      "script": "Preferences.cocoascript",
    },
    {
      "name": "Open terminal",
      "identifier": "terminal",
      "script": "OpenTerminal.cocoascript",
    },
  ],
  "menu": {
    "title": "Git",
    "items": [
      "commit",
      "push",
      "branch",
      "checkout",
      "pull",
      {
        "title": "Advanced",
        "items": [
          "init",
          "export",
          "add",
          "terminal"
        ]
      },
      "preferences"
    ]
  }
}

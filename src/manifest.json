{
  "name": "Git",
  "author": "Mathieu Dutour",
  "authorEmail" : "mathieu@dutour.me",
  "identifier": "me.dutour.mathieu.git-plugin",
  "compatibleVersion": 3,
  "bundleVersion": 1,
  "disableCocoaScriptPreprocessor": true,
  "commands": [
    {
      "name": "update",
      "identifier": "update",
      "script": "./commands/update.js",
      "handlers" : {
        "actions": {
          "OpenDocument": "onRun"
        }
      }
    },
    {
      "name": "Commit",
      "identifier": "commit",
      "shortcut": "cmd alt ctrl c",
      "script": "./commands/Commit.js",
      "description" : "Commit your changes.",
      "icon" : "icons/commit.png"
    },
    {
      "name": "Push",
      "identifier": "push",
      "shortcut": "cmd alt ctrl p",
      "script": "./commands/Push.js",
      "description" : "Push your commits to GitHub.",
      "icon" : "icons/push.png"
    },
    {
      "name": "Branches",
      "identifier": "branches",
      "shortcut": "cmd alt ctrl b",
      "script": "./commands/Branches.js",
      "description" : "Manage git branches.",
      "icon" : "icons/branches.png"
    },
    {
      "name": "Pull",
      "identifier": "pull",
      "script": "./commands/Pull.js",
      "description" : "Pull changes and branches from GitHub.",
      "icon" : "icons/pull.png"
    },
    {
      "name": "Export sketch file to JSON",
      "identifier": "export",
      "script": "./commands/Export.js"
    },
    {
      "name": "Import sketch file from JSON",
      "identifier": "import",
      "script": "./commands/Import.js"
    },
    {
      "name": "Add file to git",
      "identifier": "add",
      "script": "./commands/Add.js"
    },
    {
      "name": "Init git repo",
      "identifier": "init",
      "script": "./commands/Init.js"
    },
    {
      "name": "Preferences",
      "identifier": "preferences",
      "script": "./commands/Preferences.js"
    },
    {
      "name": "Open terminal",
      "identifier": "terminal",
      "script": "./commands/OpenTerminal.js"
    }
  ],
  "menu": {
    "title": "Git",
    "items": [
      "commit",
      "push",
      "branches",
      "pull",
      {
        "title": "Advanced",
        "items": [
          "init",
          "export",
          "import",
          "add",
          "terminal"
        ]
      },
      "preferences"
    ]
  }
}
